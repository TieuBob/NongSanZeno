@model NongSanZeno.Models.tbLoaiSanPham

@{
    ViewBag.Title = "Sualsp";
    Layout = "~/Views/Layout/_LayoutAdmin.cshtml";
}

<link rel="stylesheet" href="~/Content/Admin/admin.css">

<h2 style="font-size: 26px; text-align: center;">Điều Chỉnh Thông Tin Loại Sản Phẩm</h2>
 
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MaLoaiSP)
        <div class="form-group">
            Tên Loại Sản Phẩm:
            <div class="col-md-10">
                <input required type="text" name="TenLoaiSP" value="@Model.TenLoaiSP" />
            </div>
        </div>

        <div class="form-group">
            <div><input style="font-weight: bold" type="submit" value="Lưu" class="btn btn-default" /></div>
            <div class="btn btn-default" style="font-weight:bold; color:white"><a href="/AdminSanPham/DSloaisanpham">Quay Lại</a></div>
        </div>
    </div>
}