@model NongSanZeno.Models.tbDonViTinh
@{
    ViewBag.Title = "ThemDvt";
    Layout = "~/Views/Layout/_LayoutAdmin.cshtml";
}

<link rel="stylesheet" href="~/Content/Admin/admin.css">

<h2 style="text-align:center">THÊM ĐƠN VỊ TÍNH</h2>
<hr />

@using (Html.BeginForm("ThemDvt", "AdminSanPham", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label>Tên Đơn Vị Tính</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenDVT)
                @Html.ValidationMessageFor(model => model.TenDVT)
            </div>
        </div>

        <div class="form-group">
            <div><input style="font-weight: bold" type="submit" value="Thêm Mới" class="btn btn-default" /></div>
            <div class="btn btn-default" style="font-weight:bold; color:white"><a href="/AdminSanPham/DSdonvitinh">Quay Lại</a></div>
        </div>

    </div>
}