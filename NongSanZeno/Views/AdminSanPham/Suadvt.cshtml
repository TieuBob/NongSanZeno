@model NongSanZeno.Models.tbDonViTinh
@{
    ViewBag.Title = "Suadvt";
    Layout = "~/Views/Layout/_LayoutAdmin.cshtml";
}

<link rel="stylesheet" href="~/Content/Admin/admin.css">

<h2 style="font-size: 26px; text-align: center;">Điều Chỉnh Thông Tin Đơn Vị Tính</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MaDVT)
        <div class="form-group">
            Tên đơn vị tính:
            <div class="col-md-10">
                <input required type="text" name="TenDVT" value="@Model.TenDVT" />
            </div>
        </div>

        <div class="form-group">
            <div><input style="font-weight: bold" type="submit" value="Lưu" class="btn btn-default" /></div>
            <div class="btn btn-default" style="font-weight:bold; color:white"><a href="/AdminSanPham/DSdonvitinh">Quay Lại</a></div>
        </div>
    </div>
}